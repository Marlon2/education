<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
  	<package name="userlogin" namespace="/" extends="struts-default">
  		<action name="login" class="loginAction">
  			<result name="error">/bg_login.jsp</result>
			<result name="user">WEB-INF/bg/main.jsp</result>
			<result name="admin">WEB-INF/bg/main.jsp</result>
			<result name="logout" type="redirect">/bg_login.jsp</result>
  		</action>
  	</package>
</struts>	